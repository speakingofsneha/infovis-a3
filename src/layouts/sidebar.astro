---
import "../styles/sidebar.scss";

// get current page path for active link highlighting
const currentPath = Astro.url.pathname;
---

<aside class="sidebar">
  {/* logo section at top of sidebar */}
  <div class="sidebar-logo">
    <img src="/infovis-a3/favicon.png" alt="Logo" />
  </div>
  
  {/* main navigation menu */}
  <nav class="sidebar-menu">
    <ul>
      {/* analytics/dashboard link - active for both home and thermal comfort pages */}
      <li>
        <a 
          href="/infovis-a3/analytics" 
          title="Analytics" 
          class={`sidebar-link ${currentPath === '/analytics' || currentPath === '/thermalcomf' ? 'active' : ''}`}
        >
          <span class="material-symbols-outlined">analytics</span>
        </a>
      </li>
      
      {/* alerts page link */}
      <li>
        <a 
          href="/infovis-a3/alerts" 
          title="Alerts" 
          class={`sidebar-link ${currentPath === '/alerts' ? 'active' : ''}`}
        >
          <span class="material-symbols-outlined">notifications</span>
        </a>
      </li>
      
      {/* about page link - opens in new tab */}
      <li>
        <a 
          href="/infovis-a3/" 
          title="About" 
          class={`sidebar-link ${currentPath === '/' ? 'active' : ''}`}
          target="_blank"
          rel="noopener noreferrer"
        >
          <span class="material-symbols-outlined">info</span>
        </a>
      </li>
    </ul>
  </nav>
</aside>
