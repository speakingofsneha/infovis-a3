---
import Sidebar from '../layouts/sidebar.astro';
import Heatmap from '../components/heatmap.jsx';
import Boxplot from '../components/boxplot.jsx';
import ComfortTrends from '../components/comfort.trends.jsx';
import BandedRange from '../components/bandedrange.jsx';
import '../styles/index.scss';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IEQ Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />
    <script src="https://cdn.plot.ly/plotly-2.27.1.min.js"></script>
    <script src="https://d3js.org/d3.v7.min.js"></script>
  </head>
  <body>
    <Sidebar />
    
    <div class="main-content">
      <!-- Sticky Topbar -->
      <div class="topbar">
        <h1>
          <a class="back-button" href="/">‚Üê</a>
          Thermal Comfort
        </h1>
      </div>

      <!-- Scrollable Dashboard Content -->
      <main class="dashboard">
        <div class="charts-container">
          <Heatmap client:only="react"/>
          <Boxplot client:only="react"/>
        </div>
        <div class="trends-container">
          <ComfortTrends client:only="react"/>
        </div>
        <div class="trends-container">
          <BandedRange client:only="react" />
        </div>
      </main>
    </div>
  </body>
</html>
